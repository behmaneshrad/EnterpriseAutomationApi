{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },

  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=EnterpriseDb;Trusted_Connection=True;TrustServerCertificate=True;"
  },

  "MongoDbSettings": {
    "ConnectionString": "mongodb://mongo:27017",
    "DatabaseName": "EnterpriseDb"
  },

  "Redis": {
    "Host": "redis"
  },

  "Cors": {
    "FrontOrigin": "http://localhost:4000"
  },

  "Keycloak": {
    "Authority": "http://localhost:8080",
    "Realm": "EnterpriseRealm",

    // مهم: برای ولیدیشن توکن
    "Audience": "enterprise-api",

    // لاگین کاربر (Password Grant) و اعتبارسنجی
    "ClientId": "enterprise-api",
    "ClientSecret": "Xz7pK93@vGmLwq!eD4Rt#2Fh",

    // اختیاری/پیشنهادی: اگر برای Admin REST از client_credentials استفاده می‌کنی
    "AdminClientId": "enterprise-api",
    "AdminClientSecret": "Xz7pK93@vGmLwq!eD4Rt#2Fh"
    // یا می‌تونی یک کلاینت اختصاصی ادمین بسازی و سکرت جدا بدی
  },
  "Authorization": {
    "EnableAuthDebugHeaders": true
  },

  "ElasticConfiguration": {
    "Uri": "http://localhost:9200",
    "Indices": {
      "SystemLog": "system-logs-{0:yyyy.MM.dd}",
      "WorkflowLog": "workflow-logs"
    }
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.Elasticsearch" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "Elasticsearch",
        "Args": {
          "nodeUris": "http://localhost:9200",
          "indexFormat": "system-logs-{0:yyyy.MM.dd}",
          "autoRegisterTemplate": true,
          "overwriteTemplate": true,
          "autoRegisterTemplateVersion": "ESv7"
        }
      },
      {
        "Name": "Elasticsearch",
        "Args": {
          "nodeUris": "http://localhost:9200",
          "indexFormat": "workflow-logs",
          "autoRegisterTemplate": true,
          "overwriteTemplate": true,
          "autoRegisterTemplateVersion": "ESv7"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },
  "AllowedHosts": "*"
}
