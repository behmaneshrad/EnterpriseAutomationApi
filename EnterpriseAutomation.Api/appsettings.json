{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=.;Database=EATest;Trusted_Connection=True;TrustServerCertificate=True;",
    "DefaultConnection0": "Server=.;Database=EnterpriseDb;Trusted_Connection=True;TrustServerCertificate=True;"
  },
  "Mongo": {
    "ConnectionString": "mongodb://admin:admin123@localhost:27017/?authSource=admin",
    "Database": "enterprise_logs",
    "WorkflowLogCollection": "workflow_logs",
    "EnsureIndexes": true
  },
  "Redis": {
    "Host": "redis"
  },
  "Keycloak": {
    "AuthServerUrl": "",
    "Realm": "",
    "ClientId": "",
    "ClientSecret": ""    
  },
  "KeycloakSettings": {
    "AuthServerUrl": "",
    "Realm": "",
    "ClientId": "",
    "ClientSecret": ""
  },
  "Authorization": {
    "EnableAuthDebugHeaders": true
  },
  "ElasticConfiguration": {
    "Uri": "http://localhost:9200",
    "Indices": {
      "WorkflowLog": "workflow-logs"
    }
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.Elasticsearch" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "Elasticsearch",
        "Args": {
          "nodeUris": "http://localhost:9200",
          "indexFormat": "system-logs-{0:yyyy.MM.dd}",
          "autoRegisterTemplate": true,
          "overwriteTemplate": true,
          "autoRegisterTemplateVersion": "ESv7"
        }
      },
      {
        "Name": "Elasticsearch",
        "Args": {
          "nodeUris": "http://localhost:9200",
          "indexFormat": "workflow-logs",
          "autoRegisterTemplate": true,
          "overwriteTemplate": true,
          "autoRegisterTemplateVersion": "ESv7"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },
  "AllowedHosts": "*"
}
